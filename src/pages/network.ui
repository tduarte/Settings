<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <object class="AdwPreferencesPage" id="root">
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Connectivity</property>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Enable networking</property>
            <child type="suffix">
              <object class="GtkSwitch" id="network_switch"/>
            </child>
            <property name="activatable-widget">network_switch</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Placeholder</property>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Network page placeholder</property>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
